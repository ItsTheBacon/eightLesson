<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#FF025050"
    tools:context=".AddnewTaskFragment">

    <EditText
        android:id="@+id/et_Description_taskFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/style_inputs"
        android:backgroundTint="@color/black"
        android:layout_margin="6dp"
        android:layout_below="@id/et_title_taskFragment"
        android:fontFamily="sans-serif-thin"
        android:hint="Enter Description"
        android:textColor="@color/white"
        android:textColorHint="@color/white"

        />
    <EditText
        android:id="@+id/et_title_taskFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/style_inputs"
        android:backgroundTint="@color/black"
        android:layout_margin="6dp"
        android:fontFamily="sans-serif-thin"
        android:hint="Enter title"
        android:textColor="@color/white"
        android:textColorHint="@color/white"

        />


    <Button
        android:id="@+id/btn_add_taskFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_Description_taskFragment"
        android:text="ADD"
        android:layout_margin="8dp"
        android:background="@drawable/style_inputs"
        android:fontFamily="sans-serif-thin"

        />

</RelativeLayout>